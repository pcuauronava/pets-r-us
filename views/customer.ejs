<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Solitreo&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="../styles/site.css" />
    <title>Customer List Page</title>
</head>

<body>
    <div id="a" class="grid-container">
        <div class="item1">
            <h1><%- text %></h1>
        </div>
        <div class="item2">
            <nav>
                <h2>Menu</h2>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/grooming">Grooming</a></li>
                    <li><a href="/appointments">Appointments</a></li>
                    <li><a href="/boarding">Boarding</a></li>
                    <li><a href="/customer">Customer List</a></li>
                    <li><a href="/registration">Registration</a></li>
                </ul>
            </nav>

        </div>
        <div class="item3">
            <h1>List of Customers</h1>
            <% if(customers.length> 0){ %>
                <table class="table">
                    <tr>
                        <th>UserName</th>
                        <th>email</th>
                    </tr>
                    <tbody>
                        <% customers.forEach(function(customer){ %>
                            <tr>
                                <td>
                                    <%= customer.customerName %>
                                </td>
                                <td>
                                    <%= customer.email %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
                <% } else { %>
                    <h2> customers have not been added to de MongoDB database. Try adding some!</h2>
                    <% } %>
        </div>
        <div class="item4">
            <div id="regUsers"></div>
            <img src="/images/guest-list-icon.jpg" width="250" height="250" alt="appointment-pic">
        </div>
        <div class="item5"> <span>item5</span> </div>
    </div>
</body>


</html>